{
  "_comment": "Summary: added storage support for local agent settings.",
  "manifest_version": 3,
  "name": "Hacktide Navigator",
  "version": "0.1.0",
  "description": "Local guide and agent navigator using Ollama.",
  "permissions": ["activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
